<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="@dimen/margin" android:background="@color/screen_background">
    
	<!-- Dog -->
	<ImageView android:id="@+id/dog_image" 
		android:layout_width="300px"
		android:layout_height="193px"
		android:layout_marginBottom="10px"
		android:src="@drawable/dachshund"
		android:layout_gravity="top"
	/>       
    
    <TextView android:id="@+id/happiness_desc"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/happiness_desc"
    	android:layout_gravity="center_horizontal"
    	android:layout_marginTop="8px"
    />

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">  
			<TextView android:id="@+id/happiness_label"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:text="@string/happiness_label"
		    />
		    
		    <TextView android:id="@+id/happiness_value"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_marginLeft="3px"
		    />
	</LinearLayout>
    	
	<!-- Happiness Bar -->
	<SeekBar android:id="@+id/happiness_bar"
		android:background="@drawable/happiness_grad"
		android:layout_width="300px"
		android:layout_height="30px"
		android:layout_marginBottom="5px"
		android:progress="0"
		android:paddingLeft="30px"
		android:paddingRight="30px"
		android:progressDrawable="@drawable/clear"
		android:enabled="false"
	/>    	
    	
	<TextView android:id="@+id/loyalty_desc"
    	android:layout_width="fill_parent"
    	android:layout_height="wrap_content"
    	android:text="@string/loyalty_desc" 
    	android:layout_gravity="center_horizontal"
    	android:layout_marginTop="8px"
    />    	
    
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	    android:orientation="horizontal"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content">      
			<TextView android:id="@+id/loyalty_label"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:text="@string/loyalty_label"
		    />
		    
		    <TextView android:id="@+id/loyalty_value"
		    	android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:layout_marginLeft="3px"
		    />    
	</LinearLayout>
	
	<!-- Loyalty -->
	<ImageView android:id="@+id/loyalty_rating" 
		android:layout_width="300px"
		android:layout_height="wrap_content"
		android:layout_marginBottom="5px"
		android:src="@drawable/heart_1of7" 
	/>     	
   
</LinearLayout>
