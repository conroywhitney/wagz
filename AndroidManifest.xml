<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.konreu.android.wagz"
      android:versionName="0.9.1" android:versionCode="1">
      
    <uses-sdk android:minSdkVersion="3" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application android:name="WagzApp" android:icon="@drawable/icon" android:label="@string/app_name" android:debuggable="false">
        <activity android:name="com.konreu.android.wagz.activities.Wagz"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
		<activity android:name="com.konreu.android.wagz.activities.Detailz"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>        
        
        <activity android:name="com.konreu.android.wagz.activities.Settingz"
                android:label="@string/activity_settings">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service android:name=".StepService"/>

    </application>
<uses-permission android:name="android.permission.VIBRATE"></uses-permission>
</manifest> 
